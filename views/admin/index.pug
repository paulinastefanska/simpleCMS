extends ../layout

block content
  h1= title
  nav
    ul
      li
        a(href='/admin/news/add') Add

  table
    tr
      th ID
      th Title
      th Created date
      th Action
    each item, index in data
      tr
        td=index
        td=item.title
        td=item.date
        td 
          a(href=`/admin/news/delete/${item._id}`) Delete