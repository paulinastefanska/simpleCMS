extends ../layout

block content
  h1= title

  if errors.errors !== undefined
    each message in errors.errors
      p=message

  form(method='post')
    p
      label Title
      input(type='text' name='title' value=body.title || '')
    p
      label(class='text-textarea') Text
      textarea(name='text')=body.text || ''
    p
      input(type='submit' value='Save' class='btn-submit')
