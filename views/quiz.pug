extends layout

block content
  h1= title
  if show
    form(method='post')
      p What is your favourite season?
      ul
        each item in data
          li
            label=item.title
            input(type='radio' name='quiz' value=item._id)
      input(type='submit' value="Vote" class='btn-submit')
      p Vote to see results!
  else 
    h2 You have already voted!
    h3 Results:
    ul
      each item in data
        li #{item.title}: #{(item.vote/sum*100).toFixed(1)}%
    p Number of votes: #{sum}
    